<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rlShareDialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/tv_size_10"
            android:text="@string/chooseshare"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_15"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/padding_margin_10"
            android:layout_marginTop="@dimen/padding_margin_10"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.yd.org.sellpopularizesystem.myView.CircleImageView
                    android:id="@+id/ivWexinp"
                    style="@style/WrapWrap"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/umeng_socialize_wxcircle"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivWexinp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/padding_margin_10"
                    android:text="@string/weixincircle"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_size_10"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.yd.org.sellpopularizesystem.myView.CircleImageView
                    android:id="@+id/ivWexin"
                    style="@style/WrapWrap"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/umeng_socialize_wechat"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivWexin"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/padding_margin_10"
                    android:text="@string/weixinfriends"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_size_10"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone">

                <com.yd.org.sellpopularizesystem.myView.CircleImageView
                    android:id="@+id/ivFacebook"
                    style="@style/WrapWrap"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/umeng_socialize_facebook"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivFacebook"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/padding_margin_10"
                    android:text="@string/auth_google_play_services_client_facebook_display_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_size_10"/>
            </RelativeLayout>
        </LinearLayout>


        <ImageView
            android:id="@+id/ivQr"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/padding_margin_10"
            android:layout_weight="1"
            android:background="@color/search_edit_bac"
            android:scaleType="fitCenter"
            android:src="@mipmap/qr"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/search_edit_bac"/>

        <TextView
            android:id="@+id/tvCancelShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_margin_10"
            android:text="@string/cancel"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_15"/>
    </LinearLayout>
</RelativeLayout>
