<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/search_edit_bac"
    android:orientation="vertical">


    <LinearLayout
        style="@style/MatchWrap"
        android:background="@color/white"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/studyphoto"/>

            <TextView
                android:id="@+id/tvContinue"
                android:layout_width="@dimen/padding_margin_150"
                android:layout_height="@dimen/padding_margin_35"
                android:layout_centerInParent="true"
                android:background="@drawable/button_bac4"
                android:gravity="center"
                android:text="@string/continueread"
                android:textColor="@color/white"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/reansoarent_oneoftwo"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/padding_margin_10">

            <View
                android:layout_width="3dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_margin_10"
                android:background="@color/scale_tab5"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_margin_4"
                android:text="@string/courseclassfy"
                android:textColor="@color/gray"
                android:textSize="@dimen/tv_size_18"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_margin_20"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPlayPlatform"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_margin_4"
                android:layout_weight="1"
                android:drawablePadding="@dimen/padding_margin_10"
                android:drawableTop="@mipmap/playplat"
                android:gravity="center"
                android:text="@string/playplatform"
                android:textColor="@color/gray"/>

            <TextView
                android:id="@+id/tvSuccess"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_margin_4"
                android:layout_weight="1"
                android:drawablePadding="@dimen/padding_margin_10"
                android:drawableTop="@mipmap/success"
                android:gravity="center"
                android:text="@string/successlaw"
                android:textColor="@color/gray"/>


            <TextView
                android:id="@+id/tvSaleTec"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_margin_4"
                android:layout_weight="1"
                android:drawablePadding="@dimen/padding_margin_10"
                android:drawableTop="@mipmap/saletec"
                android:gravity="center"
                android:text="@string/sales_techniques"
                android:textColor="@color/gray"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_margin_20"
            android:background="@color/white"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvBasic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_margin_4"
                android:layout_weight="1"
                android:drawablePadding="@dimen/padding_margin_10"
                android:drawableTop="@mipmap/basicknoledge"
                android:gravity="center"
                android:text="@string/basic_konwledge"
                android:textColor="@color/gray"/>

            <TextView
                android:id="@+id/tvProject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_margin_4"
                android:layout_weight="1"
                android:drawablePadding="@dimen/padding_margin_10"
                android:drawableTop="@mipmap/project"
                android:gravity="center"
                android:text="@string/project"
                android:textColor="@color/gray"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_margin_4"
                android:layout_weight="1"
                android:drawablePadding="@dimen/padding_margin_10"
                android:drawableTop="@mipmap/project"
                android:gravity="center"
                android:text="@string/project"
                android:textColor="@color/gray"
                android:visibility="invisible"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_margin_30"
            android:layout_marginTop="@dimen/padding_margin_20"
            android:background="@color/search_edit_bac"
            android:padding="@dimen/padding_margin_20"/>

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/padding_margin_10"
        android:scaleType="fitXY"
        android:src="@mipmap/ban"/>
</RelativeLayout>