<?xml version="1.0" encoding="utf-8"?>
<com.yd.org.sellpopularizesystem.myView.CheckableLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relNotic"
    style="@style/MatchWrap"
    android:background="@drawable/bg_item_sel"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/padding_margin_14"
    android:paddingLeft="@dimen/padding_margin_10"
    android:paddingRight="@dimen/padding_margin_10"
    android:paddingTop="@dimen/padding_margin_14">


    <CheckBox
        android:id="@+id/check_box"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/notific"
        android:button="@null"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:padding="@dimen/padding_margin_4"/>

    <TextView
        android:id="@+id/tvMessageTitle"
        style="@style/MatchWrap"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/padding_margin_4"
        android:layout_marginRight="@dimen/padding_margin_4"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textSize="@dimen/tv_size_12"/>

    <TextView
        android:id="@+id/tvPoint"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/circle_shape"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_size_08"/>

    <ImageView
        android:id="@+id/ivIndicator"
        style="@style/WrapWrap"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/padding_margin_4"
        android:src="@mipmap/rightarrow"/>
</com.yd.org.sellpopularizesystem.myView.CheckableLinearLayout>