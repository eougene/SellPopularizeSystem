<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlPop"
    style="@style/MatchMatch">

    <LinearLayout
        style="@style/MatchWrap"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <LinearLayout
            style="@style/MatchWrap"
            android:layout_marginLeft="@dimen/padding_margin_20"
            android:layout_marginRight="@dimen/padding_margin_20"
            android:background="@drawable/base_square"
            android:orientation="vertical">

            <Button
                android:id="@+id/btViewDetail"
                style="@style/MatchWrap"
                android:background="@drawable/base_square"
                android:text="@string/viewdetail"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/tv_size_15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/search_edit_bac" />

            <Button
                android:id="@+id/btRemain"
                style="@style/MatchWrap"
                android:background="@drawable/base_square"
                android:text="@string/remain"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/tv_size_15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/search_edit_bac" />

            <Button
                android:id="@+id/btLineup"
                style="@style/MatchWrap"
                android:background="@drawable/base_square"
                android:text="@string/lineup"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/tv_size_15"
                android:visibility="gone"/>
        </LinearLayout>

        <Button
            android:id="@+id/btCancel"
            style="@style/MatchWrap"
            android:layout_marginBottom="@dimen/padding_margin_10"
            android:layout_marginLeft="@dimen/padding_margin_20"
            android:layout_marginRight="@dimen/padding_margin_20"
            android:layout_marginTop="@dimen/padding_margin_10"
            android:background="@drawable/base_square"
            android:text="@string/cancel"
            android:textColor="@color/light_blue"
            android:textSize="@dimen/tv_size_20" />
    </LinearLayout>

</RelativeLayout>