<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/MatchMatch"
              android:background="@color/white"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <RelativeLayout
        style="@style/MatchWrap"
        android:background="@color/search_edit_bac">

        <com.yd.org.sellpopularizesystem.myView.SearchEditText
            android:id="@+id/activity_main_input_edittext"
            style="@style/editTextStyle"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lltitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/scale_tab5"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/tv_size_15"
                android:textStyle="bold"
                android:visibility="gone"/>
        </LinearLayout>

        <include layout="@layout/lawyer_listview"/>
    </LinearLayout>
</LinearLayout>
