<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_back"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_margin_10">

            <ImageView
                android:id="@+id/commissionImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@mipmap/commission"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding_margin_10"
                android:layout_toLeftOf="@+id/commissionRightImageView"
                android:layout_toRightOf="@+id/commissionImageView"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/titleCommission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="sss"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/tv_size_12"/>

                <TextView
                    android:id="@+id/commissionID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_margin_4"
                    android:text="订单号"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/tv_size_12"/>
            </LinearLayout>


            <ImageView
                android:id="@+id/commissionRightImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/padding_margin_10"
                android:scaleType="centerInside"
                android:src="@mipmap/point"/>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_margin_50"
            android:layout_marginTop="@dimen/padding_margin_20"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/totalmoney"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_12"/>

            <TextView
                android:id="@+id/sumCommission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_margin_4"
                android:text="1233444"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_15"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/nameCommission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_margin_4"
                android:textColor="@color/gray"
                android:textSize="@dimen/tv_size_15"/>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/commissionRel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_margin_20"
            android:background="@color/search_edit_bac"
            android:paddingBottom="@dimen/padding_margin_10"
            android:paddingTop="@dimen/padding_margin_10">


            <TextView
                android:id="@+id/moreTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/more"
                android:textColor="@color/gray"
                android:textSize="@dimen/tv_size_12"/>

            <TextView
                android:id="@+id/notifText"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginBottom="@dimen/padding_margin_10"
                android:layout_toRightOf="@+id/moreTextView"
                android:background="@drawable/circle_shape"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="@dimen/tv_size_08"
                android:visibility="gone"/>


            <ImageView
                android:id="@+id/moreImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding_margin_6"
                android:layout_toRightOf="@+id/notifText"
                android:src="@mipmap/more"/>


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/commissionLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/search_edit_bac"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_margin_10"
            android:visibility="gone"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/padding_margin_10"
                android:layout_marginRight="@dimen/padding_margin_10"
                android:background="@color/setting_bac"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_margin_10"
                >

                <RelativeLayout
                    android:id="@+id/rlFistCommisstion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">


                    <TextView
                        android:id="@+id/firstCommissionSum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/scale_tab5"/>


                    <TextView
                        android:id="@+id/firstCommissionDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/firstCommissionSum"
                        android:layout_marginTop="@dimen/padding_margin_6"
                        android:text="-/-/-"
                        android:textColor="@color/gray"/>


                    <View
                        android:id="@+id/firstView"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="@dimen/padding_margin_10"
                        android:layout_toRightOf="@+id/firstCommissionSum"
                        android:background="@drawable/circle_shape"
                        android:visibility="gone"/>

                </RelativeLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/setting_bac"/>

                <RelativeLayout
                    android:id="@+id/rlSecondCommisstion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/secondCommissionSum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/gray"/>

                    <TextView
                        android:id="@+id/secondCommissionDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/secondCommissionSum"
                        android:layout_marginTop="@dimen/padding_margin_6"
                        android:text="-/-/-"
                        android:textColor="@color/gray"/>


                    <View
                        android:id="@+id/secondView"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="@dimen/padding_margin_10"
                        android:layout_toRightOf="@+id/secondCommissionSum"
                        android:background="@drawable/circle_shape"
                        android:visibility="gone"/>

                </RelativeLayout>


                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/setting_bac"/>

                <RelativeLayout
                    android:id="@+id/rlThirdCommisstion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/thirdCommissionSum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/gray"/>

                    <TextView
                        android:id="@+id/thirdCommissionDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/thirdCommissionSum"
                        android:layout_marginTop="@dimen/padding_margin_6"
                        android:text="-/-/-"
                        android:textColor="@color/gray"/>


                    <View
                        android:id="@+id/thirdView"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="@dimen/padding_margin_10"
                        android:layout_toRightOf="@+id/thirdCommissionSum"
                        android:background="@drawable/circle_shape"
                        android:visibility="gone"/>

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>