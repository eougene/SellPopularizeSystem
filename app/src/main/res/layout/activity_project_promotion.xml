<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:descendantFocusability="blocksDescendants"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="@color/scale_tab5"
                app:expandedTitleMarginStart="20dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/buildingphoto1"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="1"/>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/tb"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/padding_margin_20"
                    app:layout_collapseMode="pin">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/backImageView"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:scaleType="centerInside"
                            android:src="@mipmap/w_back"/>

                        <TextView
                            android:id="@+id/tvTilte"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_horizontal"
                            android:text="@string/app_name"
                            android:textColor="@color/white"
                            android:textSize="@dimen/tv_size_18"
                            android:visibility="gone"/>
                    </RelativeLayout>

                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/padding_margin_14">

                    <LinearLayout
                        android:id="@+id/llAll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:src="@mipmap/building"/>

                        <TextView
                            android:id="@+id/tvBuildingNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="@dimen/padding_margin_30"
                            android:layout_marginTop="-15dp"
                            android:background="@drawable/button"
                            android:gravity="center"
                            android:paddingLeft="@dimen/padding_margin_4"
                            android:paddingRight="@dimen/padding_margin_4"
                            android:text="100"
                            android:textColor="@color/white"
                            android:textSize="@dimen/tv_size_08"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/padding_margin_16"
                            android:gravity="center_horizontal"
                            android:text="@string/all_building"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/tv_size_15"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tvHotSale"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawablePadding="@dimen/padding_margin_10"
                            android:drawableTop="@mipmap/hotsale"
                            android:gravity="center"
                            android:text="@string/hot_sale"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/tv_size_15"/>

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/tvLookHouse"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/padding_margin_16"
                        android:drawableTop="@mipmap/position"
                        android:gravity="center"
                        android:text="@string/map_house"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/tv_size_15"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_margin_10"
                    android:layout_marginTop="@dimen/padding_margin_10"
                    android:background="@color/search_edit_bac"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_margin_10">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/house_suggest"
                        android:textColor="@color/black"
                        android:textSize="@dimen/tv_size_15"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:drawablePadding="@dimen/padding_margin_8"
                        android:drawableRight="@mipmap/viewmore"
                        android:text="@string/view_more"
                        android:textSize="@dimen/tv_size_15"/>
                </RelativeLayout>

                <com.yd.org.sellpopularizesystem.myView.NoScrollGridView
                    android:id="@+id/gvHouse"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/padding_margin_10"
                    android:layout_marginLeft="@dimen/padding_margin_10"
                    android:layout_marginRight="@dimen/padding_margin_10"
                    android:horizontalSpacing="@dimen/padding_margin_10"
                    android:numColumns="2"
                    android:verticalSpacing="@dimen/padding_margin_10">

                </com.yd.org.sellpopularizesystem.myView.NoScrollGridView>
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>
