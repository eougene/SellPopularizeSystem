<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yd.org.sellpopularizesystem.activity.ProjectPromotionActivity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="230dp">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="@color/scale_tab5"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/buildingphoto1"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.7"/>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/tb"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fitsSystemWindows="true"
                    android:layout_marginTop="@dimen/padding_margin_20"
                    app:layout_collapseMode="pin"
                    app:navigationIcon="@mipmap/backbt">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tvTilte"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="110dp"
                            android:text="@string/app_name"
                            android:textSize="@dimen/tv_size_18"
                            android:textColor="@color/white"
                            android:visibility="gone" />
                    </RelativeLayout>

                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/padding_margin_14">

                    <LinearLayout
                        android:id="@+id/llAll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/building" />

                        <TextView
                            android:id="@+id/tvBuildingNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="@dimen/padding_margin_30"
                            android:layout_marginTop="-10dp"
                            android:background="@mipmap/digitalbac"
                            android:gravity="center"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/padding_margin_10"
                            android:text="@string/all_building"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/tv_size_15" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvHotSale"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/padding_margin_14"
                        android:drawableTop="@mipmap/hotsale"
                        android:gravity="center"
                        android:text="@string/hot_sale"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/tv_size_15" />

                    <TextView
                        android:id="@+id/tvLookHouse"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/padding_margin_16"
                        android:drawableTop="@mipmap/position"
                        android:gravity="center"
                        android:text="@string/map_house"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/tv_size_15" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_margin_10"
                    android:layout_marginTop="@dimen/padding_margin_10"
                    android:background="@color/shallow_gray" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_margin_10">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/house_suggest"
                        android:textColor="@color/black"
                        android:textSize="@dimen/tv_size_15"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:drawablePadding="@dimen/padding_margin_8"
                        android:drawableRight="@mipmap/viewmore"
                        android:text="@string/view_more"
                        android:textSize="@dimen/tv_size_15" />
                </RelativeLayout>

                <com.yd.org.sellpopularizesystem.myView.NoScrollGridView
                    android:id="@+id/gvHouse"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/padding_margin_10"
                    android:layout_marginRight="@dimen/padding_margin_10"
                    android:layout_marginTop="@dimen/padding_margin_10"
                    android:horizontalSpacing="@dimen/padding_margin_4"
                    android:numColumns="2"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="@dimen/padding_margin_4">

                </com.yd.org.sellpopularizesystem.myView.NoScrollGridView>
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>
