<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch">


    <LinearLayout
        style="@style/MatchWrap"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            style="@style/MatchWrap"
            android:layout_marginLeft="@dimen/padding_margin_20"
            android:layout_marginRight="@dimen/padding_margin_20"
            android:background="@drawable/base_square"
            android:orientation="vertical">

            <Button
                android:id="@+id/btSelecCus"
                style="@style/MatchWrap"
                android:background="@drawable/button_click"
                android:text="@string/selectcus"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/tv_size_15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/search_edit_bac" />

            <Button
                android:id="@+id/btEditCusInfo"
                style="@style/MatchWrap"
                android:background="@drawable/button_click"
                android:text="@string/editcusinfo"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/tv_size_15" />
        </LinearLayout>

        <Button
            android:id="@+id/btCusCancel"
            style="@style/MatchWrap"
            android:layout_marginBottom="@dimen/padding_margin_10"
            android:layout_marginLeft="@dimen/padding_margin_20"
            android:layout_marginRight="@dimen/padding_margin_20"
            android:layout_marginTop="@dimen/padding_margin_10"
            android:background="@drawable/button_click"
            android:text="@string/cancel"
            android:textColor="@color/light_blue"
            android:textSize="@dimen/tv_size_15" />
    </LinearLayout>

</RelativeLayout>