<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/search_edit_bac"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/llLogin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@mipmap/login"
        android:orientation="vertical">

        <com.yd.org.sellpopularizesystem.myView.ViewPagerIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/padding_margin_10">

        </com.yd.org.sellpopularizesystem.myView.ViewPagerIndicator>

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/padding_margin_20"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/padding_margin_10"
            android:background="@color/white"/>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/lrViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">
    </android.support.v4.view.ViewPager>


</LinearLayout>