<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/notificationLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/padding_margin_30"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/allCheck"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_margin_10"
            android:text="@string/selectall"
            android:textColor="@color/redyellow"
            android:textSize="@dimen/tv_size_15"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/message"
            android:textColor="@color/black"
            android:textSize="@dimen/one_tv_size"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/deleteNotification"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="@string/delete"
                android:textColor="@color/redyellow"
                android:textSize="@dimen/tv_size_15"
                android:visibility="invisible"/>


            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/customdetaild_title"
                android:textColor="@color/redyellow"
                android:textSize="@dimen/tv_size_15"/>


        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/baseView"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="@dimen/padding_margin_10"
        android:background="@color/shallow_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/padding_margin_20"
        android:layout_marginRight="@dimen/padding_margin_20"
        android:background="@drawable/studycheck_butbac"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/orderRelat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/tvOrder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/sdudycheck_radiobutton_selector"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="@string/order"
                android:textColor="@drawable/radiotextcolor_select"
                android:textSize="@dimen/tv_size_12"/>

            <TextView
                android:id="@+id/tvOrderSum"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/padding_margin_4"
                android:layout_marginTop="@dimen/padding_margin_4"
                android:background="@drawable/circle_shape"
                android:gravity="center"
                android:text="@string/_99"
                android:textColor="@color/white"
                android:textSize="@dimen/tv_size_08"
                android:visibility="gone"/>


        </RelativeLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/redyellow"/>

        <RelativeLayout
            android:id="@+id/brifeRelat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="1dp"
            android:paddingTop="1dp">

            <RadioButton
                android:id="@+id/tvBrief"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectange_selector"
                android:button="@null"
                android:gravity="center"
                android:text="@string/team"
                android:textColor="@drawable/radiotextcolor_select"
                android:textSize="@dimen/tv_size_12"/>

            <TextView
                android:id="@+id/tvBriefSum"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/padding_margin_4"
                android:layout_marginTop="@dimen/padding_margin_4"
                android:background="@drawable/circle_shape"
                android:gravity="center"
                android:text="@string/_99"
                android:textColor="@color/white"
                android:textSize="@dimen/tv_size_08"
                android:visibility="gone"/>


        </RelativeLayout>

        <View
            android:id="@+id/line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/redyellow"/>

        <RelativeLayout
            android:id="@+id/companyRelat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="1dp"
            android:paddingTop="1dp">

            <RadioButton
                android:id="@+id/tvCompany"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectange_selector"
                android:button="@null"
                android:gravity="center"
                android:text="@string/company"
                android:textColor="@drawable/radiotextcolor_select"
                android:textSize="@dimen/tv_size_12"/>

            <TextView
                android:id="@+id/tvCompanySum"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/padding_margin_4"
                android:layout_marginTop="@dimen/padding_margin_4"
                android:background="@drawable/circle_shape"
                android:gravity="center"
                android:text="@string/_99"
                android:textColor="@color/white"
                android:textSize="@dimen/tv_size_08"
                android:visibility="gone"/>

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/redyellow"/>

        <RelativeLayout
            android:id="@+id/systemRelat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/tvSystem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/checkbut_radiobutton_selector"
                android:button="@null"
                android:gravity="center"
                android:text="@string/system"
                android:textColor="@drawable/radiotextcolor_select"
                android:textSize="@dimen/tv_size_12"/>

            <TextView
                android:id="@+id/tvSystemSum"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/padding_margin_4"
                android:layout_marginTop="@dimen/padding_margin_4"
                android:background="@drawable/circle_shape"
                android:gravity="center"
                android:text="@string/_99"
                android:textColor="@color/white"
                android:textSize="@dimen/tv_size_08"
                android:visibility="gone"/>


        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/padding_margin_10"
        android:background="@color/shallow_gray"/>
</LinearLayout>