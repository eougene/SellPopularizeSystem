<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivHousePic"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:src="@mipmap/flat" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_margin_8">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_margin_4"
                android:text="Bankstown THE Mark"
                android:textSize="@dimen/tv_size_15"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvBuildType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button7"
                android:gravity="center"
                android:paddingLeft="@dimen/padding_margin_4"
                android:paddingRight="@dimen/padding_margin_4"
                android:paddingTop="@dimen/padding_margin_2"
                android:paddingBottom="@dimen/padding_margin_2"
                android:layout_marginTop="@dimen/padding_margin_4"
                android:layout_toRightOf="@+id/tvName"
                android:layout_marginLeft="@dimen/padding_margin_6"
                android:text="@string/villa"
                android:textColor="#4898F1"
                />
            <TextView
                android:id="@+id/tvHot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FF635B"
                android:layout_below="@+id/tvName"
                android:layout_marginTop="@dimen/padding_margin_6"
                android:padding="@dimen/padding_margin_4"
                android:text="@string/hot"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tvCollection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#C784DE"
                android:layout_toRightOf="@+id/tvHot"
                android:layout_alignTop="@+id/tvHot"
                android:layout_marginLeft="@dimen/padding_margin_10"
                android:padding="@dimen/padding_margin_4"
                android:text="@string/collection"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tvDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#EE781F"
                android:layout_toRightOf="@+id/tvCollection"
                android:layout_alignTop="@+id/tvCollection"
                android:layout_marginLeft="@dimen/padding_margin_10"
                android:padding="@dimen/padding_margin_4"
                android:text="@string/discount"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvHot"
                android:layout_marginTop="@dimen/padding_margin_6"
                android:text="@string/loc_des" />

            <TextView
                android:id="@+id/tvHousePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvLocation"
                android:layout_marginTop="@dimen/padding_margin_6"
                android:text="@string/price_des"
                android:textColor="#F19658"
                android:textSize="@dimen/tv_size_18"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>