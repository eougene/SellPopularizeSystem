<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="@dimen/padding_margin_10">

        <ImageView
            android:id="@+id/ivHousePic"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:maxHeight="90dp"
            android:minHeight="90dp"
            android:scaleType="centerInside"
            android:src="@mipmap/yingjia" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_margin_10">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_margin_10"
                android:layout_toLeftOf="@+id/tvBuildType"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Bankstown THE Mark"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_12"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvBuildType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/padding_margin_10"
                android:background="@drawable/button7"
                android:gravity="center"
                android:paddingLeft="@dimen/padding_margin_4"
                android:paddingRight="@dimen/padding_margin_4"
                android:text="@string/villa"
                android:textColor="#4898F1"
                android:textSize="@dimen/tv_size_10" />

            <LinearLayout
                android:id="@+id/scaLin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvName"
                android:layout_marginTop="@dimen/padding_margin_6"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvHot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FF635B"
                    android:paddingLeft="@dimen/padding_margin_4"
                    android:paddingRight="@dimen/padding_margin_4"
                    android:text="@string/hot"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tv_size_10"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvCollection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_margin_10"
                    android:background="#C784DE"
                    android:paddingLeft="@dimen/padding_margin_4"
                    android:paddingRight="@dimen/padding_margin_4"
                    android:text="@string/collection"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tv_size_10"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_margin_10"
                    android:background="#EE781F"
                    android:paddingLeft="@dimen/padding_margin_4"
                    android:paddingRight="@dimen/padding_margin_4"
                    android:text="@string/discount"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tv_size_10"
                    android:visibility="invisible" />


            </LinearLayout>


            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/scaLin"
                android:layout_marginTop="@dimen/padding_margin_6"
                android:text="@string/loc_des"
                android:textSize="@dimen/tv_size_12" />

            <TextView
                android:id="@+id/tvHousePrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvLocation"
                android:layout_marginTop="@dimen/padding_margin_6"
                android:text="@string/price_des"
                android:textColor="#F19658"
                android:textSize="@dimen/tv_size_12"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/ivIslock"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/reansoarent_oneoftwo"
        android:src="@mipmap/lock"
        android:scaleType="centerInside"
        android:visibility="gone"
         />

</RelativeLayout>