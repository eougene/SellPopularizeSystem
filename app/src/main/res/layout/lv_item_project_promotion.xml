<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="@dimen/padding_margin_10">

        <ImageView
            android:id="@+id/ivHousePic"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:minHeight="90dp"
            android:scaleType="fitXY"
            android:src="@mipmap/yingjia"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_margin_10">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_margin_10"
                android:layout_toLeftOf="@+id/tvBuildType"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Bankstown THE Mark"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_12"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvBuildType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/padding_margin_10"
                android:background="@drawable/button7"
                android:gravity="center"
                android:padding="@dimen/padding_margin_4"
                android:text="@string/villa"
                android:textColor="#4898F1"
                android:textSize="@dimen/tv_size_10"
                />

            <TextView
                android:id="@+id/tvHot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvName"
                android:layout_marginTop="@dimen/padding_margin_6"
                android:background="#FF635B"
                android:padding="@dimen/padding_margin_4"
                android:text="@string/hot"
                android:textColor="@color/white"
                android:textSize="@dimen/tv_size_10"/>

            <TextView
                android:id="@+id/tvCollection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tvHot"
                android:layout_marginLeft="@dimen/padding_margin_10"
                android:layout_toRightOf="@+id/tvHot"
                android:background="#C784DE"
                android:padding="@dimen/padding_margin_4"
                android:text="@string/collection"
                android:textColor="@color/white"
                android:textSize="@dimen/tv_size_10"/>

            <TextView
                android:id="@+id/tvDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tvCollection"
                android:layout_marginLeft="@dimen/padding_margin_10"
                android:layout_toRightOf="@+id/tvCollection"
                android:background="#EE781F"
                android:padding="@dimen/padding_margin_4"
                android:text="@string/discount"
                android:textColor="@color/white"
                android:textSize="@dimen/tv_size_10"/>

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvHot"
                android:layout_marginTop="@dimen/padding_margin_6"
                android:text="@string/loc_des"
                android:textSize="@dimen/tv_size_12"/>

            <TextView
                android:id="@+id/tvHousePrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvLocation"
                android:layout_marginTop="@dimen/padding_margin_6"
                android:text="@string/price_des"
                android:textColor="#F19658"
                android:textSize="@dimen/tv_size_12"
                android:textStyle="bold"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>