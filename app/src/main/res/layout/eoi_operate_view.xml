<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/llEoi"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginLeft="@dimen/padding_margin_4"
        android:layout_marginRight="@dimen/padding_margin_4"
        android:background="@drawable/addpopbac"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitleDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/padding_margin_6"
            android:paddingTop="@dimen/padding_margin_6"
            android:text="@string/recharge"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_12"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/search_edit_bac"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_margin_6"
            android:layout_marginTop="@dimen/padding_margin_6">

            <TextView
                android:id="@+id/tvNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding_margin_8"
                android:text="@string/moneypoint"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_12"/>

            <TextView
                android:id="@+id/tvMoneyNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding_margin_8"
                android:layout_toRightOf="@+id/tvNum"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_12"/>

            <TextView
                android:id="@+id/tvPayMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/padding_margin_6"
                android:gravity="center_vertical|right"
                android:paddingBottom="@dimen/padding_margin_6"
                android:paddingRight="@dimen/padding_margin_6"
                android:paddingTop="@dimen/padding_margin_6"
                android:text="@string/pay_method"
                android:textColor="@color/black"
                android:textSize="@dimen/padding_margin_12"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivCash"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@mipmap/dollar"/>

            <ImageView
                android:id="@+id/ivIdCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@mipmap/wallet"/>

            <ImageView
                android:id="@+id/ivAlipay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@mipmap/alipay"/>

            <ImageView
                android:id="@+id/ivWeixinPay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@mipmap/weichatpay"/>

            <ImageView
                android:id="@+id/ivEoiPay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/padding_margin_6"
                android:scaleType="centerInside"
                android:src="@mipmap/eoiorder"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCertificate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/tvUploadTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_margin_4"
                android:layout_marginRight="@dimen/padding_margin_4"
                android:layout_marginTop="@dimen/padding_margin_6"
                android:paddingBottom="@dimen/padding_margin_4"
                android:paddingLeft="@dimen/padding_margin_4"
                android:paddingTop="@dimen/padding_margin_4"
                android:text="@string/uploadeevidencepoint"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_12"/>

            <ImageView
                android:id="@+id/ivCertificate"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="@dimen/padding_margin_4"
                android:layout_marginTop="@dimen/padding_margin_4"
                android:scaleType="centerInside"
                android:src="@mipmap/addmore"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/padding_margin_10"
            android:background="@color/search_edit_bac"/>

        <TextView
            android:id="@+id/tvEoiSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_margin_4"
            android:layout_marginLeft="@dimen/padding_margin_4"
            android:layout_marginRight="@dimen/padding_margin_4"
            android:layout_marginTop="@dimen/padding_margin_4"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:paddingBottom="@dimen/padding_margin_8"
            android:paddingTop="@dimen/padding_margin_16"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_size_12"/>
    </LinearLayout>


</LinearLayout>