<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tvEoiNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/padding_margin_10"
        android:textColor="@color/black"
        android:textSize="@dimen/tv_size_12" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="4"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_margin_10"
        android:paddingTop="@dimen/padding_margin_10">

        <TextView
            android:id="@+id/eoiTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/light_blue"
            android:textSize="@dimen/tv_size_10" />


        <LinearLayout
            android:id="@+id/promtionLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/padding_margin_4"
            android:layout_marginTop="@dimen/padding_margin_4"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvProm01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/tv_size_10" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_margin_4"
                android:src="@mipmap/bedroom" />

            <TextView
                android:id="@+id/tvProm02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_margin_4"
                android:text="0"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/tv_size_10" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_margin_4"
                android:src="@mipmap/shower" />

            <TextView
                android:id="@+id/tvProm03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_margin_4"
                android:text="0"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/tv_size_10" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_margin_4"
                android:src="@mipmap/car" />


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvEoiStatusDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/padding_margin_4"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_10" />

        <TextView
            android:id="@+id/salesName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/padding_margin_4"
            android:layout_marginTop="@dimen/padding_margin_4"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_10" />

    </LinearLayout>

</LinearLayout>