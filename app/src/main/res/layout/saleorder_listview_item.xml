<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/search_edit_bac"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_margin_6"
        android:layout_marginRight="@dimen/padding_margin_6"
        android:layout_marginTop="@dimen/padding_margin_14"
        android:background="@drawable/button_back"

        android:orientation="vertical"
        android:padding="@dimen/padding_margin_10">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_margin_10"
            android:layout_marginRight="@dimen/padding_margin_10">


            <TextView
                android:id="@+id/tvSaleNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/redhome"
                android:drawablePadding="@dimen/padding_margin_6"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_12"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/depositImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_margin_10"
                android:layout_toRightOf="@+id/tvSaleNum"
                android:drawableLeft="@mipmap/deposit"
                android:drawablePadding="@dimen/padding_margin_2"
                android:gravity="center"
                android:text="@string/deposit"
                android:textColor="@color/scale_tab5"
                android:textSize="@dimen/tv_size_12"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/tvSaleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_12"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/padding_margin_10"
            android:layout_marginTop="@dimen/padding_margin_10"
            android:background="@color/search_edit_bac"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_margin_10"
            android:layout_marginRight="@dimen/padding_margin_10"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvSaleDes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_12"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/tvSalePrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_12"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/padding_margin_10"
            android:layout_marginTop="@dimen/padding_margin_10"
            android:background="@color/search_edit_bac"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/saleRecorTv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_back5"
                android:paddingBottom="@dimen/padding_margin_6"
                android:paddingLeft="@dimen/padding_margin_10"
                android:paddingRight="@dimen/padding_margin_10"
                android:paddingTop="@dimen/padding_margin_6"
                android:text="@string/cancel_order"
                android:textColor="@color/gray"
                android:textSize="@dimen/tv_size_10"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/saleRecorTv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_margin_10"
                android:background="@drawable/button_back6"
                android:paddingBottom="@dimen/padding_margin_6"
                android:paddingLeft="@dimen/padding_margin_10"
                android:paddingRight="@dimen/padding_margin_10"
                android:paddingTop="@dimen/padding_margin_6"
                android:text="@string/payintentmoney"
                android:textColor="@color/white"
                android:textSize="@dimen/tv_size_10"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/saleRecorTv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_margin_10"
                android:background="@drawable/button_back6"
                android:paddingBottom="@dimen/padding_margin_6"
                android:paddingLeft="@dimen/padding_margin_10"
                android:paddingRight="@dimen/padding_margin_10"
                android:paddingTop="@dimen/padding_margin_6"
                android:text="@string/saler_16"
                android:textColor="@color/white"
                android:textSize="@dimen/tv_size_10"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/saleRecorTv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_margin_10"
                android:background="@drawable/button_back6"
                android:paddingBottom="@dimen/padding_margin_6"
                android:paddingLeft="@dimen/padding_margin_10"
                android:paddingRight="@dimen/padding_margin_10"
                android:paddingTop="@dimen/padding_margin_6"
                android:text="@string/saler_15"
                android:textColor="@color/white"
                android:textSize="@dimen/tv_size_10"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/padding_margin_10"
                android:gravity="center"
                android:maxLines="2"
                android:paddingBottom="@dimen/padding_margin_6"
                android:paddingLeft="@dimen/padding_margin_10"
                android:paddingRight="@dimen/padding_margin_10"
                android:paddingTop="@dimen/padding_margin_6"
                android:textColor="@color/scale_tab5"
                android:textSize="@dimen/tv_size_12"
                android:visibility="gone"/>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>