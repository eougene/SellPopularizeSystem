<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivHousePic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="120dp"
            android:minHeight="120dp"
            android:src="@mipmap/yingjia"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_margin_4"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Bankstown THE Mark"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_12"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_margin_4"
            android:text="@string/loc_des"
            android:textSize="@dimen/tv_size_12"/>

        <TextView
            android:id="@+id/tvHousePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_margin_4"
            android:text="@string/price_des"
            android:textColor="@color/scale_tab5"
            android:textSize="@dimen/tv_size_12"
            android:textStyle="bold"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/ivIslock"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:background="@color/reansoarent_oneoftwo"
        android:scaleType="centerInside"
        android:src="@mipmap/lock"
       android:visibility="gone"

        />
</RelativeLayout>