<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_margin_6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_margin_6"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivHousePic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/yingjia" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_margin_4"
            android:text="Bankstown THE Mark"
            android:singleLine="true"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textStyle="bold"/>


            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_margin_4"
                android:text="@string/loc_des" />

            <TextView
                android:id="@+id/tvHousePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_margin_4"
                android:text="@string/price_des"
                android:textColor="@color/scale_tab5"/>

    </LinearLayout>
</LinearLayout>