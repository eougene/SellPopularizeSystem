<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/white">

    <FrameLayout style="@style/MatchMatch">
        <com.yd.org.sellpopularizesystem.viewpage.HackyViewPager
            android:id="@+id/viewPager"
            style="@style/MatchMatch" />
    </FrameLayout>


    <ImageView
        android:id="@+id/backImageView"
        android:layout_width="@dimen/padding_margin_35"
        android:layout_height="@dimen/padding_margin_35"
        android:layout_marginLeft="@dimen/padding_margin_10"
        android:layout_marginTop="@dimen/padding_margin_10"
        android:scaleType="centerInside"
        android:src="@mipmap/backbtcircle" />

    <LinearLayout
        android:id="@+id/llAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/llClick"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/reansoarent_oneoftwo"
            android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivTrangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@mipmap/down_arrow" />
        </LinearLayout>

        <com.yd.org.sellpopularizesystem.myView.ExpandView
            android:id="@+id/vp_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/reansoarent_oneoftwo"
            android:clickable="true">

        </com.yd.org.sellpopularizesystem.myView.ExpandView>


    </LinearLayout>


    <ImageView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/padding_margin_20"
        android:layout_marginRight="@dimen/padding_margin_20"
        android:src="@mipmap/shopping"/>

</RelativeLayout>